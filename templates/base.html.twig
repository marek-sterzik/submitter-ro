<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Vývojové prostředí pro PVA{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <nav>
            {% if user is not null %}
                <strong>{{ user.name }}</strong>
                {% if user.isTeacher() %}
                    [UČITEL]
                {% elseif user.isStudent() %}
                    [STUDENT]
                {% else %}
                    [NEZNÁMÝ]
                {% endif %}
                (<a href="{{ path("logout") }}">odhlásit</a>)
            {% else %}
                Nepřihlášen
                (<a href="{{ path("login") }}">přihlásit</a>)
            {% endif %}
        </nav>
        {% block body %}{% endblock %}
    </body>
</html>
