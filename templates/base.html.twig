<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Vývojové prostředí pro PVA{% endblock %}</title>
        {% block stylesheets %}
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
                rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <nav>
            {% if user is not null %}
                <a href="{{ path("user_detail") }}">{{ user.name }}</a>
                {% if is_granted('ROLE_SUPERADMIN') %}
                    <span class="role role-admin">SUPERADMIN</span>
                {% elseif is_granted('ROLE_ADMIN') %}
                    <span class="role role-admin">ADMIN</span>
                {% elseif is_granted('ROLE_TEACHER') %}
                    <span class="role role-teacher">UČITEL</span>
                {% elseif is_granted('ROLE_STUDENT') %}
                    <span class="role role-student">STUDENT</span>
                {% else %}
                    <span class="role role-unknown">NEZNÁMÝ</span>
                {% endif %}
                (<a href="{{ path("logout") }}">odhlásit</a>)
            {% else %}
                Nepřihlášen
                (<a href="{{ path("login") }}">přihlásit</a>)
            {% endif %}
        </nav>
        <menu>
            {% for item in menu %}
                <li{% if item.actual %} class="actual"{% endif %}>
                    <a href="{{ path(item.route) }}"{% if item.target_blank %} target="_blank"{% endif %}>{{ item.name }}</a>
                </li>
            {% endfor %}
        </menu>
        <div class="body">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
